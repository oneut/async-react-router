{
  "name": "async-react-router",
  "version": "2.0.0-rc.4",
  "description": "Client side react router with async. It like next.js!",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build:lib && npm run build:ssr",
    "build:lib": "rimraf lib && cross-env NODE_ENV=production babel src/lib -d lib/ --source-maps inline",
    "build:ssr": "rimraf ssr && cross-env NODE_ENV=production babel src/ssr -d ssr/",
    "lint": "eslint ./src ./test",
    "lint:fix": "eslint --fix ./src ./test",
    "prepublish": "npm run build",
    "test": "nyc ava --verbose",
    "report": "nyc report --reporter=html",
    "commit": "git-cz"
  },
  "files": [
    "lib",
    "ssr"
  ],
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "rxjs": "^6.0.0"
  },
  "dependencies": {
    "history": "^4.7.2",
    "path-to-regexp": "^2.2.1"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-rc.1",
    "@babel/core": "7.0.0-rc.1",
    "@babel/plugin-transform-runtime": "7.0.0-rc.1",
    "@babel/preset-env": "7.0.0-rc.1",
    "@babel/preset-react": "7.0.0-rc.1",
    "@babel/register": "7.0.0-rc.1",
    "@babel/runtime": "7.0.0-rc.1",
    "ava": "1.0.0-beta.7",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-dynamic-import-node": "^2.1.0",
    "babel-plugin-istanbul": "^4.1.6",
    "browser-env": "^3.2.5",
    "commitizen": "^2.10.1",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.2.0",
    "eslint": "^5.3.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-prettier": "^2.6.2",
    "husky": "^1.0.0-rc.13",
    "nyc": "12.0.2",
    "prettier": "1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-test-renderer": "^16.4.2",
    "rimraf": "^2.6.2",
    "rxjs": "^6.2.2",
    "sinon": "^6.1.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oneut/async-react-router.git"
  },
  "keywords": [
    "react",
    "router",
    "next.js",
    "async"
  ],
  "author": "onetu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oneut/async-react-router/issues"
  },
  "homepage": "https://github.com/oneut/async-react-router#readme",
  "ava": {
    "concurrency": 5,
    "powerAssert": true,
    "require": [
      "@babel/register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": {
      "testOptions": {
        "plugins": [
          "@babel/plugin-transform-runtime",
          "dynamic-import-node"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint && npm test"
    }
  }
}
